{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "electron",
    "module": "commonjs",
    "target": "ES2020",
    "sourceMap": false,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": [
    "src/index.ts",
    "src/preload.ts",
    "src/main/**/*"
  ]
}